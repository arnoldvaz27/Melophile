<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingTop="@dimen/_5sdp"
    android:id="@+id/audio_items"
    android:background="@drawable/background_search"
    android:backgroundTint="@color/colorSearchBackground"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name"
        android:layout_toEndOf="@id/music_img"
        android:layout_toStartOf="@id/menu_more"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textColor="@color/white"
        android:id="@+id/music_file_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Size"
        android:layout_toEndOf="@id/music_img"
        android:layout_toStartOf="@id/menu_more"
        android:layout_below="@id/music_file_name"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/music_size"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/menu_more"
        android:src="@drawable/more_vert"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        app:tint="@color/white" />


</RelativeLayout>